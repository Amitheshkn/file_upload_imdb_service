#!/usr/bin/env python
import sys

from imdb_app.api import urls


def main():
    try:
        host = "0.0.0.0"
        port = 18080

        print(f"Start IMDB REST API on {host}:{port}")

        urls.app.run(host, port, debug=True, threaded=True)
    except Exception as e:
        print(f"Error: {str(e)}")
        sys.exit(1)


if __name__ == '__main__':
    main()
